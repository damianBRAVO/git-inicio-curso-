/*
 Realizar un programa que muestre en pantalla palabras que ean ingresadas por teclado hasta que se ingrese la palabra "salir".
!discord
!insta
!tw
!yt
!cursos
!emprog

 */
package ejerciciocentinela;

/**
 * @author damianBRAVO
 */
import java.util.Scanner;

public class EjercicioCentinela {

   
    public static void main(String[] args) {
        // sabemos que es un bucle
        // sabemos la condición de salida
        // qué estructura usar
        
        System.out.println("Ingese una palabra");
        Scanner teclado = new Scanner (System.in);
        String palabra = teclado.next();
        
        while (!palabra.equalsIgnoreCase("salir")){
            System.out.println("La palabra es:" + palabra);
            System.out.println("Ingrese una palabra");
            palabra = teclado.next();
        }
        
    }
    
}
