
package vectores.pkgif.pkgfor;

/**
 * @authordamianBRAVO
 */
import java.util.Scanner;
public class VectoresIfFor {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        int vector []= new int [15];
       Scanner teclado = new Scanner (System.in);
       // carga nuestro vector
       for(int i= 0; i <15; i++){
           System.out.println("Ingrese un numeropara el vector");
           vector[i] = teclado.nextInt();
           
       }
        // recorer y contar cuantos nuemros 3 hay 
        int cont = 0;
        for (int i = 0 ;i<15; i++){
            if (vector [i]==3){
                cont = cont +1 ;
            }
        }
        
        System.out.println("La cantidad de numeros 3 que hay en el vector es:"+ cont);
        
        
    }
    
}
